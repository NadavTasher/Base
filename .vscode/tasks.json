{
    // Simple docker run configuration
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build image",
            "type": "shell",
            "command": "docker build . -t nadavtasher/base"
        },
        {
            "label": "Stop container",
            "type": "shell",
            "command": "docker rm --force base || true"
        },
        {
            "label": "Start container",
            "type": "shell",
            "command": "docker run --name base --publish 8200:80 --interactive --tty nadavtasher/base || true"
        },
        {
            "label": "Build & Run",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "panel": "shared",
                "clear": true,
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Stop container",
                "Build image",
                "Start container"
            ]
        }
    ]
}